<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.more.view.MoreFragment">

        <TextView
            android:id="@+id/descriptionLabelMoreFragmentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descriptionMoreFragmentLabel"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionMoreFragmentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionMoreFragmentText"
            android:textSize="16sp"
            android:layout_margin="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionLabelMoreFragmentTextView" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>